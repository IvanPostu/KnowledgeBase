<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC "-//Checkstyle//DTD SuppressionFilter Configuration 1.0//EN" "https://checkstyle.org/dtds/suppressions_1_0.dtd">
<suppressions>
	<!-- Suppressing a specific Checkstyle violation -->
	<suppress checks="SomeCheck"
		files="src/main/java/com/example/SomeClass.java" />

	<!-- Suppressing a violation for a specific package -->
	<suppress checks="SomeOtherCheck"
		files="src/main/java/com/example/otherpackage/*" />
</suppressions>
